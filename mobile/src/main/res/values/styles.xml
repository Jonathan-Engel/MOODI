<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MoodiFont" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#565656</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MoodiTheme" parent="android:Theme.Material.NoActionBar" >
        <item name="android:colorAccent">@color/accent_material_dark_1</item>
    </style>

    <style name="MoodiNewTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/accent_material_dark_2</item>
    </style>

</resources>
